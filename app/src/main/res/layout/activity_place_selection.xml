<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".PlaceSelection">

    <TextView
        android:id="@+id/placeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/place"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="30sp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical">

        <Button
            style="@style/Sylhet"
            android:onClick="sylhetPlace"
            android:text="Sylhet"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"

            />

        <Button
            style="@style/Sunamgonj"
            android:onClick="sunamgonjPlace"
            android:text="Sunamgonj"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            />

        <Button
            style="@style/Moulvibazar"
            android:onClick="moulvibazarPlace"
            android:text="Moulvibazar"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"

            />

        <Button
            style="@style/Hobigonj"
            android:onClick="hobigonjPlace"
            android:text="Hobigonj"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</LinearLayout>