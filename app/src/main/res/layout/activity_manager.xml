<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ManagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/allplatterId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALL PLATTER"
            android:background="@color/fbutton_color_orange"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            />
        <Button
            android:id="@+id/addplatterId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD PLATTER"
            android:background="@color/fbutton_color_green_sea"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            />
        <Button
            android:id="@+id/deleteplatterId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE PLATTER"
            android:background="@color/fbutton_color_pumpkin"
            android:padding="20dp"
            />


    </LinearLayout>

</RelativeLayout>